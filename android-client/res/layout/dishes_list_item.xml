<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="horizontal"
             android:layout_gravity="center"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/background">
    <ImageView android:id="@+id/imageDish"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginLeft="5dp"
               android:layout_marginTop="1dp"
               android:layout_marginBottom="1dp"
               android:src="@drawable/little_foto_dish"
               android:layout_gravity="left|center_vertical"/>
    <TextView android:id="@+id/dishName"
              android:layout_gravity="top"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginLeft="50dp"
              android:text="Title"
              android:maxLines="2"
              android:singleLine="false"
              android:textColor="#000000"
              android:layout_weight="1.0"
              android:textStyle="bold"
              android:textSize="14dp"/>
    <TextView android:id="@+id/dishPrice"
              android:layout_marginBottom="10dp"
              android:layout_gravity="top|right"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginRight="50dp"
              android:textSize="14dp"
              android:ellipsize="end"
              android:text="38 грн."
              android:textColor="#000000"/>
    <TextView android:id="@+id/dishIngredients"
              android:layout_marginBottom="10dp"
              android:layout_gravity="bottom"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginLeft="50dp"
              android:textSize="12dp"
              android:ellipsize="end"
              android:text="Ingredients"
              android:textColor="#000000"/>
    <TextView android:id="@+id/dishWeight"
              android:layout_marginBottom="10dp"
              android:layout_gravity="bottom"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginLeft="230dp"
              android:textSize="12dp"
              android:ellipsize="end"
              android:text="200 гр."
              android:textColor="#000000"/>
    <ImageButton android:id="@+id/addToOrder"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:src="@drawable/basket"
                 android:background="@drawable/red_segment3"
                 android:layout_gravity="right|center_vertical"/>
    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="bottom"
               android:layout_marginLeft="43dp"
               android:scaleType="fitXY"
               android:src="@drawable/sheddow"/>
</FrameLayout>